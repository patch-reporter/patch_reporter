{
    "extends": "standard",
    "env": {
        "browser": true,
        "webextensions": true
    },
    "rules": {
        "indent": ["off", 4],
        "eol-last": 0,
        "space-before-function-paren": 0,
        "comma-dangle": 0,
        "camelcase": 0,
        "semi": 0,
        "no-tabs": 0
    }
}
